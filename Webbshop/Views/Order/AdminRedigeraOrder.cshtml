<style>
    body {
        background-image: url("../../images/Pyramid-scheme.png");
    }

    form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    label {
        width: 180px;
        border: solid 1px;
    }

    #in {
    }

    h2 {
        text-align: center;
    }

    .field {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        font-size: 1.1rem;
    }

    .wrapper {
        position: relative;
    }

    span {
        position: absolute;
        top: 6px;
        right: 10px;
    }

    input {
        background-color: rgba(14, 78, 72, 0.6);
        border: 1px solid rgba(0, 0, 0, 0.3);
        border-radius: 4px;
        padding: 4px;
        outline: none;
        color: wheat;
        font-size: 1.1rem;
        position: relative;
        margin-top: 4px;
    }

    .Price::after {
        content: "| KG";
        position: absolute;
        right: 3px;
        top: 2px;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
    button[type=submit] {

    }
    td {
        border: solid 1px black;
        padding: 10px;
    }
</style>
@model Order
@{
    <form asp-action="sparaOrder" method="post">
        <div id="in">
            <h2>ID:</h2>
            <h2>@Model.id</h2>
        </div>
        <input type="hidden" name="id" value="@Model.id">
        <div id="in">
            <h2>Customer:</h2>
            <h2>@Model.customer.id</h2>
        </div>
        <div id="in">
            <label for="orderStatus">Orderstatus:</label>
            <input type="text" id="orderStatus" name="orderStatus" value="@Model.orderStatus" required placeholder="orderStatus">
        </div>
        <div id="in">
            <label for="orderDate">Date of order:</label>
            <input type="datetime" id="orderDate" name="orderDate" value="@Model.orderDate" required placeholder="orderDate">
        </div>
        <div id="in" style="margin-left: 50px;">
            <label for="New">New product to basket:</label>
            <input type="number" id="New" name="New" class="New" step="1" min="1" placeholder="Product id / DOES NOT WORK">
            <button type="submit" value="Add">Add</button>
        </div>
        @foreach (Produkt P in Model.purchasinglist) {
            <ul id="in">
                <li>@P.id --- @Html.ActionLink("Radera", "RaderaInList", new { orderID = Model.id , produktID = P.id}) </li>
               
            </ul>
        }
        <button type="submit" value="Change">Confirm</button>
    </form>
}
