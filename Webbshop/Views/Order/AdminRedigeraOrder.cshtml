<style>
    td {
        border: solid 1px black;
        padding: 10px;
    }
</style>
@model Order
@{
    <form asp-action="sparaOrder" method="post">
        <div id="in">
            <h2>ID:</h2>
            <h1>@Model.id</h1>
        </div>
        <input type="hidden" name="id" value="@Model.id">
        <div id="in">
            <label for="Name">Customer:</label>
            <input type="text" id="Customer" name="Customer" value="@Model.id" placeholder="Product name">
        </div>
        <div id="in">   
            <label for="Supplier">Supplier:</label>
            <input type="text" id="Supplier" name="tillverkare" value="@Model.orderStatus" placeholder="Product Supplier">
        </div>
        <div id="in">
        <label for="Info">Info:</label>
            <input type="Info" id="Info" name="produktinfo" value="@Model.orderDate" placeholder="Product information">
        </div>
        @foreach (Produkt P in Model.purchasinglist) {
            <ul id="in">
                <li>@P.id --- @Html.ActionLink("Radera", "RaderaInList", new { orderID = Model.id , produktID = P.id}) </li>
               
            </ul>
        }
        <button type="submit">Confirm</button>
    </form>
}
