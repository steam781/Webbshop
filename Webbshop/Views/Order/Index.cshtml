<style>
    td {
        border: solid 1px black;
        padding: 10px;
    }
</style>
@model List<Order>
<a class="nav-link" asp-area="" asp-controller="Kund" asp-action="newKund">läg till kund</a>
<div id="kundList">
    @{
        <table>
            <tr>
                <td>Customer:</td>
                <td>orderStatus:</td>
                <td>orderDate:</td>
                <td>purchasinglist:</td>
                <td></td>
            </tr>

            @foreach (Order O in Model)
            {

                <tr>
                    <td>
                        <h3>@O.Customer</h3>
                    </td>
                    <td>
                        <h3>@O.orderStatus</h3>
                    </td>
                    <td>
                        <h3>@O.orderDate</h3>
                    </td>
                    <td>
                        <h3>@O.purchasinglist</h3>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "redigeraOrder", "Order", new {id = @O.id})
                    </td>
                </tr>

            }
        </table>
    }
</div>
