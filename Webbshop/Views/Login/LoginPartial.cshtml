@page
@model Employee
@{
    if (ViewData != null)
    {
        ViewData["Title"] = "Login";
    }
}

<style>
    button {
        margin-top: 20px;
    }
</style>
@ViewBag.MeddelandeMail
<div class="container">
    <h1>Login</h1>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (ViewBag.LoginError != null)
                {
                    <div class="form-group">
                        <span class="text-danger">
                            Användarnamn eller lösenord är felkatig!
                        </span>
                    </div>
                }
                <div class="form-group">
                    <label for="mailadress">Email address</label>
                    <input type="mailadress" class="form-control" id="mailadress" name="mailadress" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password"/>
                    @ViewBag.MeddelandePass
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }