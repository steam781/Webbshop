@using Microsoft.AspNetCore.Http // Import the HttpContext class

@{
    ViewData["Title"] = "Home Page";

    string name = "";
    string role = "";

    if (Context.Session.GetString("name") != null)
    {
        name = Context.Session.GetString("name");
        role = Context.Session.GetString("role");
    }

    <div class="text-center">
        @if (!string.IsNullOrEmpty(name))
        {
            <h1 class="display-4">Welcome, @name!</h1>
            <p>You are logged in as a @role.</p>
        }
        else
        {
            <h1 class="display-4">Welcome!</h1>
            <p>Please log in to access your account.</p>
        }
    </div>
}